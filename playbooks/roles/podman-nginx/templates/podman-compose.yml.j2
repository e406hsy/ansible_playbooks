version: '3.8'

services:
  nginx:
    image: nginx:stable-alpine
    container_name: nginx
    restart: unless-stopped
    ports:
      - "443:443/tcp"
    environment:
      - "TZ: Asia/Seoul"
    volumes:
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./conf/vhosts:/etc/nginx/vhosts
      - ./conf.d:/etc/nginx/conf.d
      - ./html:/etc/nginx/html
      - ./ssl:/etc/nginx/ssl
      - ./logs:/var/log/nginx

networks:
  nginx_network:
    external: true
    name: nginx_network